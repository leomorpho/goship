			if form, ok := page.Form.(*types.ProfileBioFormData); ok {
				<!-- Biography -->
				<div
					hx-target="#aboutMe"
					hx-swap="outerHTML"
					class="flex flex-col space-y-4"
				>
					<label for="bio" class="block text-sm md:text-base font-medium">Biography</label>
